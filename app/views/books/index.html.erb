<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>

<h1><strong>Books</strong></h1>
<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<th>
		<%= book.title %>
		</th>
		<th><%= book.body %></th>
		<th><%= link_to 'show', book_path(book), class:"show_#{@book.id}" %></th>
		<th><%= link_to 'edit', edit_book_path(book), class:"edit_#{@book.id}" %></th>
		<th><%= link_to 'delete', book_path(book), method: :delete, class:"destroy_#{@book.id}" %></th>
	</tr><% end %>
</table>

<h1>NewBooks</h1>
<%= form_for(@book) do |f| %>
<h4>title</h4>
<%= f.text_field :title, class:"book_title" %>
<h4>body</h4>
<%= f.text_area :body, class:"book_body" %>
<%= f.submit '投稿' %>
<% end %>